<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gridsearch.sundarm.yahoo.com.gridsearch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yahoo.sundarm.gridsearch.activity.SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yahoo.sundarm.gridsearch.activity.FullImageActivity"
            android:label="@string/title_activity_full_image"
            android:parentActivityName="com.yahoo.sundarm.gridsearch.activity.SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yahoo.sundarm.gridsearch.activity.SearchActivity" />
        </activity>
        <activity
            android:name="com.yahoo.sundarm.gridsearch.activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="com.yahoo.sundarm.gridsearch.activity.SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yahoo.sundarm.gridsearch.activity.SearchActivity" />
        </activity>
    </application>

</manifest>
